{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://bookit.com/schemas/definitions.json",
  "definitions": {
    "uid": {
      "type": "string"
    },
    "profile": {
      "type": "object",
      "properties": {
        "uid": {
          "$ref": "#/definitions/uid"
        },
        "email": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "isProvider": {
          "type": "boolean",
          "default": "false"
        },
        "isSocial": {
          "type": "boolean",
          "default": "false"
        },
        "phoneNumber": {
          "type": "string",
          "pattern": "^[0-9]{3}-[0-9]{3}-[0-9]{4}$"
        },
        "birthday": {
          "type": "string",
          "format": "date"
        },
        "gender": {
          "type": "string",
          "enum": ["M", "F", "O"]
        }
      },
      "required": [
        "uid",
        "firstName",
        "lastName",
        "email",
        "isProvider",
        "isSocial"
      ]
    },
    "address": {
      "type": "object",
      "properties": {
        "streetAddress": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "zip": {
          "type": "string"
        },
        "lat": {
          "type": "string"
        },
        "long": {
          "type": "string"
        }
      }
    }
  }
}
