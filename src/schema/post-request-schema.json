{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://bookit.com/schemas/post-request-schema.json",
  "type": "object",
  "merge": {
    "source": { "$ref": "definitions.json#/definitions/profile" },
    "with": {
      "type": "object",
      "properties": {
        "address": { "$ref": "definitions.json#/definitions/address" }
      }
    }
  },
  "required": [
    "uid",
    "firstName",
    "lastName",
    "email",
    "isProvider",
    "isSocial"
  ]
}
