{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://bookit.com/schemas/patch-request-schema.json",
  "merge": {
    "source": { "$ref": "definitions.json#/definitions/address" },
    "with": {
      "type": "object",
      "properties": {
        "uid": {
          "$ref": "definitions.json#/definitions/uid"
        },
        "isProvider": {
          "type": "boolean"
        },
        "isSocial": {
          "type": "boolean"
        },
        "phoneNumber": {
          "type": "string",
          "pattern": "^[0-9]{3}-[0-9]{3}-[0-9]{4}$"
        },
        "birthday": {
          "type": "string",
          "format": "date"
        },
        "gender": {
          "type": "string",
          "enum": ["M", "F", "O"]
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["uid"]
}
